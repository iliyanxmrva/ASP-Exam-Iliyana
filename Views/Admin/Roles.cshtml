@using asp_exam_iliyana.Models.ViewModels
@model List<IdentityRoleViewModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Roles";
}

<nav class="navbar bg-body-tertiary d-flex justify-content-center">
    <form>
        <a asp-action="AddRole" class="btn btn-sm btn-outline-primary">Add New Role</a>
    </form>
</nav>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @role.Name
                </td>
                <td>
                    <div>
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>