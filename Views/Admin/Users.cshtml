@using asp_exam_iliyana.Models.ViewModels
@model List<UserViewModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Users";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    <div>
                        <a asp-action="AssignRoleUser" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">Asign Role</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </td>
            </tr>
        } 
    </tbody>
</table>