@using Microsoft.AspNetCore.Identity
@using asp_exam_iliyana.Models.ViewModels
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model List<Cake>

@{
    ViewData["Title"] = "Cakes";
}

@if (!SignInManager.IsSignedIn(User))
{
    <div class="alert alert-warning" role="alert">
        * Hey there! Don't forget to register or log in into your account so you can make an order.
        <a href="/Identity/Account/Register">Register</a>
        <a href="/Identity/Account/Login">Login</a>
    </div>
}

<div class="container text-center">
    <div class="row">
        @foreach (var cake in Model)
        {
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="~/images/cakes/@cake.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@cake.Name</h5>
                    <p class="card-text">@cake.Price lv</p>
                    <a asp-action="Details" asp-route-id="@cake.Id" class="btn btn-info">Details</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>